<h3>Sign Up</h3>
<% if @user.errors.any? %>
<div class="alert alert-dismissible alert-danger">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong>Oops! Something wrong happens...</strong> 

<ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
</div>
 <% end %>  

<%= form_tag "/users" do %>

  <p>
    <%= label_tag "name" %>
    <%= text_field_tag "name", @user.name %>
  </p>

  <p>
    <%= label_tag "password" %>
    <%= password_field_tag "password", @user.password %>
  </p>

  <p>
    <%= label_tag "email" %>
    <%= text_field_tag "email", @user.email %>
  </p>

  <p>
    <%= label_tag "phone_number" %>
    <%= text_field_tag "phone_number", @user.phone_number %>
  </p>
  
  <p>
	<button type="submit" class="btn btn-primary">Submit</button>
	<button type="reset" class="btn btn-default">Cancel</button>
  </p>

<% end %>
