<h3>Edit Restaurant</h3>
<% if @restaurant.errors.any? %>
<div class="alert alert-dismissible alert-danger">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong>Oops! Something wrong happens...</strong> 

<ul>
  <% @restaurant.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
</div>
 <% end %>  

<%= form_tag "/restaurants/#{@restaurant.id}", method: 'patch' do %>

  <p>
    <%= label_tag "name" %>
    <%= text_field_tag "name", @restaurant.name %>
  </p>

  <p>
    <%= label_tag "address" %>
    <%= text_field_tag "address", @restaurant.address %>
  </p>

  <p>
    <%= label_tag "table_num" %>
    <%= text_field_tag "table_num", @restaurant.table_num %>
  </p>

  <p>
      <%= submit_tag %>
  </p>

<% end %>
