<h3>Sign In</h3>

<%= form_tag "/login" do %>

    <p>
      <%= label_tag "name" %>
      <%= text_field_tag "name" %>
    </p>

    <p>
      <%= label_tag "password" %>
      <%= password_field_tag "password" %>

    </p>

	<p>
		<button type="submit" class="btn btn-primary">Submit</button>
		<button type="reset" class="btn btn-default">Cancel</button>
	</p>

<% end %>
